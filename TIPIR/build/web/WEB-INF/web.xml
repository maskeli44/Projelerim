<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>SignIn</servlet-name>
        <servlet-class>com.servlet.Login.SignIn</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.servlet.Login.logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserImage</servlet-name>
        <servlet-class>com.servlet.Login.UserImage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetUserImage</servlet-name>
        <servlet-class>com.servlet.Login.GetUserImage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserImageRemove</servlet-name>
        <servlet-class>com.servlet.Login.UserImageRemove</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MakaleKaydet</servlet-name>
        <servlet-class>com.servlet.makale.MakaleKaydet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MakaleGuncelle</servlet-name>
        <servlet-class>com.servlet.makale.MakaleGuncelle</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MakaleSil</servlet-name>
        <servlet-class>com.servlet.makale.MakaleSil</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserImageLoad</servlet-name>
        <servlet-class>com.servlet.Login.UserImageLoad</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OkunmaSayisi</servlet-name>
        <servlet-class>com.servlet.makale.OkunmaSayisi</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MakaleResim</servlet-name>
        <servlet-class>com.servlet.makale.MakaleResim</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignIn</servlet-name>
        <url-pattern>/SignIn</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SignUp</servlet-name>
        <servlet-class>com.servlet.Login.SignUp</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUp</servlet-name>
        <url-pattern>/SignUp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>unknowpass</servlet-name>
        <servlet-class>com.servlet.Login.unknowpass</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>unknowpass</servlet-name>
        <url-pattern>/unknowpass</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserImage</servlet-name>
        <url-pattern>/UserImage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetUserImage</servlet-name>
        <url-pattern>/GetUserImage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserImageRemove</servlet-name>
        <url-pattern>/UserImageRemove</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MakaleKaydet</servlet-name>
        <url-pattern>/MakaleKaydet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MakaleGuncelle</servlet-name>
        <url-pattern>/MakaleGuncelle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MakaleSil</servlet-name>
        <url-pattern>/MakaleSil</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserImageLoad</servlet-name>
        <url-pattern>/UserImageLoad</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OkunmaSayisi</servlet-name>
        <url-pattern>/OkunmaSayisi</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MakaleResim</servlet-name>
        <url-pattern>/MakaleResim</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <resource-ref>
        <description>Oracle Datasource</description>
        <res-ref-name>jdbc/SepraTanimPool</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <context-param>
        <description>Location to store uploaded file</description>
        <param-name>file-upload</param-name>
        <param-value>
        /TIPIR/web/image/
      </param-value>
    </context-param>
</web-app>
